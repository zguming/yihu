<resources>
    <style name="AppTheme.Splash" parent="AppTheme.Full">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="PracticeFragmentTheme" parent="AppTheme">
    </style>
    <style name="mine_item_text_style">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="get_return_code_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/select_get_return_code_text</item>
        <item name="android:background">@drawable/get_return_code_btn_style</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33.0dip</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:backgroundDimEnabled">false</item> <!--activity不变暗-->

    </style>
    <style name="topic_mode_textview">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25.0dip</item>
    </style>
    <!--对话框的样式-->
    <style name="NormalDialogStyle">
        <!--对话框背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="UserInfo_RelativeLayout">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>
    <style name="setting_item_icon_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/main_menu_magin_beside</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right_small</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>
