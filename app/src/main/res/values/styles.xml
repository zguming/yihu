<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="PracticeFragmentTheme" parent="AppTheme">
    </style>
    <style name="mine_item_text_style">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="get_return_code_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/select_get_return_code_text</item>
        <item name="android:background">@drawable/get_return_code_btn_style</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33.0dip</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:backgroundDimEnabled">false</item> <!--activity不变暗-->

    </style>
    <style name="topic_mode_textview">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25.0dip</item>
    </style>
    <style name="SmallRatingBar" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:progressDrawable">@drawable/small_rating_bar</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:height">18.0dip</item>
    </style>
    <style name="Widget.AppCompat.RatingBar" parent="@style/Base.Widget.AppCompat.RatingBar" />
    <style name="Base.Widget.AppCompat.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_material</item>
        <item name="android:progressDrawable">@drawable/abc_ratingbar_material</item>
    </style>
</resources>
