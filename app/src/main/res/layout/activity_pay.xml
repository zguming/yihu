<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow2left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择充值金额"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="我的订单"
            android:textColor="#525252"
            android:textSize="14dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="充值金额："
                android:textColor="#6E6F78"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/rg_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/rb_money_1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_money_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="￥30"
                    android:textColor="@color/main_money_textcolor" />

                <CheckBox
                    android:id="@+id/rb_money_2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_money_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="￥50"
                    android:textColor="@color/main_money_textcolor" />

                <CheckBox
                    android:id="@+id/rb_money_3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_money_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="￥100"
                    android:textColor="@color/main_money_textcolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rg_money1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/rb_money_4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_money_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="￥200"
                    android:textColor="@color/main_money_textcolor" />

                <CheckBox
                    android:id="@+id/rb_money_5"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_money_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="￥300"
                    android:textColor="@color/main_money_textcolor" />

                <CheckBox
                    android:id="@+id/rb_money_6"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_money_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="￥500"
                    android:textColor="@color/main_money_textcolor" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/ed_money"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/main_input_selector"
                    android:hint="若以上可选金额没有满意的，可自行填写"
                    android:digits="0123456789"
                    android:paddingLeft="40dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignLeft="@id/ed_money"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/gray_line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15.0dip"
                        android:text="选择支付方式"
                        android:textColor="@color/textColorGray"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/gray_line_color" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip">

                    <ImageView
                        android:id="@+id/alipay_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp15"
                        android:src="@drawable/alipay" />

                    <TextView
                        android:id="@+id/tv_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5_dip"
                        android:layout_marginTop="10.0dip"
                        android:layout_toRightOf="@id/alipay_icon"
                        android:text="支付宝支付"
                        android:textColor="@color/textColorBlack"
                        android:textSize="15.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_alipay"
                        android:layout_toRightOf="@id/alipay_icon"
                        android:text="推荐有支付宝帐号的用户使用"
                        android:textSize="13.0sp" />

                    <RadioButton
                        android:id="@+id/rb_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/spacePrimary"
                        android:checked="true" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/gray_line_color" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/vg_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_above="@+id/btn_topay">

            <TextView
                android:id="@+id/tv_pay_total"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:singleLine="true"
                android:text="合计: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_pay_tota2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:background="@android:color/white"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/main_money_textcolor" />

            <TextView
                android:id="@+id/tv_pay_tota3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:singleLine="true"
                android:text="元"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_topay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_login_btn"
            android:singleLine="true"
            android:text="确认支付"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>