<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:paddingLeft="@dimen/dp10"
    n1:paddingRight="@dimen/dp10">

    <EditText
        n1:id="@+id/edit_text"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:gravity="center|left|top"
        n1:hint="@string/remindAddNote"
        n1:minLines="3"
        n1:padding="@dimen/dp5"
        n1:textCursorDrawable="@drawable/shape_text_cursor"
        n1:textSize="@dimen/sp15" />
</LinearLayout>