<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mine"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_mine">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/blue_color"
                android:layout_width="fill_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="fill_parent"
                android:layout_height="155.0dip">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="77.5dip"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/home_background" />

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/spacePrimary"
                    android:src="@drawable/home_head_default" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp8"
                    android:text="@string/loginstr"
                    android:textColor="@color/listview_item_click_blue_color"
                    android:textSize="17.0sp" />

                <TextView
                    android:id="@+id/tv_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_account"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp2"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/sp13" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_line_color" />

            <RelativeLayout
                android:id="@+id/rl_circel"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="?selectableItemBackground">

                <ImageView
                    android:id="@+id/ic_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_circel_mine" />

                <TextView
                    style="@style/mine_item_text_style"
                    android:layout_toEndOf="@id/ic_forum"
                    android:text="论坛" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_arrow_right_small" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_coins"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="?selectableItemBackground">

                <include layout="@layout/line_horizontal_layout" />

                <ImageView
                    android:id="@+id/ic_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/home_coins" />

                <TextView
                    style="@style/mine_item_text_style"
                    android:layout_toEndOf="@id/ic_gold"
                    android:text="现金券" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_arrow_right_small" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_line_color"
                android:visibility="@integer/help_center_visible" />

            <RelativeLayout
                android:id="@+id/rl_report"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="?selectableItemBackground"
                android:visibility="@integer/help_center_visible">

                <ImageView
                    android:id="@+id/ic_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_mine_help" />

                <TextView
                    style="@style/mine_item_text_style"
                    android:layout_toEndOf="@id/ic_help"
                    android:text="帮助中心" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_arrow_right_small" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_line_color" />

            <RelativeLayout
                android:id="@+id/rl_order_list"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="?selectableItemBackground">

                <ImageView
                    android:id="@+id/ic_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_my_orders" />

                <TextView
                    style="@style/mine_item_text_style"
                    android:layout_toEndOf="@id/ic_orders"
                    android:text="图书订单" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_arrow_right_small" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_line_color"
                android:visibility="@integer/answer_board_visible" />

            <RelativeLayout
                android:id="@+id/rl_answer_board"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="?selectableItemBackground"
                android:visibility="@integer/answer_board_visible">

                <ImageView
                    android:id="@+id/ic_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_my_answer_board" />

                <TextView
                    style="@style/mine_item_text_style"
                    android:layout_toEndOf="@id/ic_answer"
                    android:text="答疑板" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_arrow_right_small" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_line_color" />

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="?selectableItemBackground">

                <ImageView
                    android:id="@+id/ic_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/home_new_share" />

                <TextView
                    style="@style/mine_item_text_style"
                    android:layout_toEndOf="@id/ic_share"
                    android:text="@string/wanna_share" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/main_menu_magin_beside"
                    android:layout_marginTop="@dimen/dp10"
                    android:src="@drawable/ic_arrow_right_small" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_line_color"
                android:visibility="@integer/more_product_visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="@integer/more_product_visible">

                <RelativeLayout
                    android:id="@+id/rl_more_product"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:background="?selectableItemBackground">

                    <TextView
                        style="@style/mine_item_text_style"
                        android:drawableLeft="@drawable/home_more"
                        android:text="@string/more_product" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginEnd="@dimen/main_menu_magin_beside"
                        android:layout_marginTop="@dimen/dp10"
                        android:src="@drawable/ic_arrow_right_small" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
